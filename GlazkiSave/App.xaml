<Application x:Class="GlazkiSave.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GlazkiSave"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="ListView">
            <Setter Property="FontFamily" Value="Century Gothic"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Width" Value="175"></Setter>
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="Background" Value="#B175EE"></Setter>
            <Setter Property="FontFamily" Value="Century Gothic"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Century Gothic"></Setter>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Century Gothic"></Setter>
        </Style>
    </Application.Resources>
</Application>
